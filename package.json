{
    "name": "vscode-checklist",
    "displayName": "Implementation Checklist",
    "description": "A powerful checklist extension for tracking implementation tasks with priorities, due dates, and team collaboration",
    "version": "1.4.0",
    "publisher": "pasperfection",
    "engines": {
        "vscode": "^1.60.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "implementation-checklist.createItem",
                "title": "Implementation Checklist: Create New Item"
            },
            {
                "command": "implementation-checklist.editItem",
                "title": "Implementation Checklist: Edit Item"
            },
            {
                "command": "implementation-checklist.deleteItem",
                "title": "Implementation Checklist: Delete Item"
            },
            {
                "command": "implementation-checklist.toggleComplete",
                "title": "Implementation Checklist: Toggle Item Complete"
            },
            {
                "command": "implementation-checklist.setPriority",
                "title": "Implementation Checklist: Set Item Priority"
            },
            {
                "command": "implementation-checklist.setDueDate",
                "title": "Implementation Checklist: Set Due Date"
            },
            {
                "command": "implementation-checklist.addNote",
                "title": "Implementation Checklist: Add Note"
            },
            {
                "command": "implementation-checklist.addTag",
                "title": "Implementation Checklist: Add Tag"
            },
            {
                "command": "implementation-checklist.showStatistics",
                "title": "Implementation Checklist: Show Statistics"
            },
            {
                "command": "implementation-checklist.filterItems",
                "title": "Implementation Checklist: Filter Items"
            },
            {
                "command": "implementation-checklist.sortItems",
                "title": "Implementation Checklist: Sort Items"
            },
            {
                "command": "implementation-checklist.searchItems",
                "title": "Implementation Checklist: Search Items"
            },
            {
                "command": "implementation-checklist.syncWorkspace",
                "title": "Implementation Checklist: Sync with Workspace"
            },
            {
                "command": "implementation-checklist.syncWithRemote",
                "title": "Implementation Checklist: Sync with Remote"
            },
            {
                "command": "implementation-checklist.createBackup",
                "title": "Implementation Checklist: Create Backup"
            },
            {
                "command": "implementation-checklist.restoreBackup",
                "title": "Implementation Checklist: Restore from Backup"
            },
            {
                "command": "implementation-checklist.exportBackups",
                "title": "Implementation Checklist: Export Backups"
            },
            {
                "command": "implementation-checklist.importBackups",
                "title": "Implementation Checklist: Import Backups"
            },
            {
                "command": "implementation-checklist.exportData",
                "title": "Implementation Checklist: Export Data"
            },
            {
                "command": "implementation-checklist.importData",
                "title": "Implementation Checklist: Import Data"
            },
            {
                "command": "implementation-checklist.selectTheme",
                "title": "Implementation Checklist: Select Theme"
            },
            {
                "command": "implementation-checklist.showHelp",
                "title": "Implementation Checklist: Show Help"
            },
            {
                "command": "implementation-checklist.quickAdd",
                "title": "Implementation Checklist: Quick Add Item",
                "icon": "$(add)"
            },
            {
                "command": "implementation-checklist.quickFind",
                "title": "Implementation Checklist: Quick Find Item",
                "icon": "$(search)"
            },
            {
                "command": "implementation-checklist.quickFilter",
                "title": "Implementation Checklist: Quick Filter Items",
                "icon": "$(filter)"
            },
            {
                "command": "implementation-checklist.quickStats",
                "title": "Implementation Checklist: Quick Statistics",
                "icon": "$(graph)"
            }
        ],
        "configuration": {
            "title": "Implementation Checklist",
            "properties": {
                "implementation-checklist.enableNotifications": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable notifications for due dates and updates"
                },
                "implementation-checklist.autoBackup": {
                    "type": "boolean",
                    "default": true,
                    "description": "Automatically create daily backups"
                },
                "implementation-checklist.theme": {
                    "type": "string",
                    "default": "default",
                    "enum": ["default", "modern-dark", "modern-light", "ocean-dark"],
                    "description": "Select the theme for the checklist"
                },
                "implementation-checklist.enableAnalytics": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable anonymous usage analytics to help improve the extension"
                },
                "implementation-checklist.syncOnSave": {
                    "type": "boolean",
                    "default": true,
                    "description": "Automatically sync with workspace on save"
                }
            }
        },
        "keybindings": [
            {
                "command": "implementation-checklist.createItem",
                "key": "ctrl+shift+i",
                "mac": "cmd+shift+i"
            },
            {
                "command": "implementation-checklist.toggleComplete",
                "key": "ctrl+shift+c",
                "mac": "cmd+shift+c"
            },
            {
                "command": "implementation-checklist.searchItems",
                "key": "ctrl+shift+f",
                "mac": "cmd+shift+f"
            },
            {
                "command": "implementation-checklist.quickAdd",
                "key": "ctrl+shift+a",
                "mac": "cmd+shift+a",
                "when": "implementation-checklist:enabled"
            },
            {
                "command": "implementation-checklist.quickFind",
                "key": "ctrl+shift+f",
                "mac": "cmd+shift+f",
                "when": "implementation-checklist:enabled"
            },
            {
                "command": "implementation-checklist.quickFilter",
                "key": "ctrl+shift+l",
                "mac": "cmd+shift+l",
                "when": "implementation-checklist:enabled"
            },
            {
                "command": "implementation-checklist.quickStats",
                "key": "ctrl+shift+s",
                "mac": "cmd+shift+s",
                "when": "implementation-checklist:enabled"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "command": "implementation-checklist.createItem",
                    "group": "implementation-checklist"
                },
                {
                    "command": "implementation-checklist.editItem",
                    "group": "implementation-checklist"
                },
                {
                    "command": "implementation-checklist.toggleComplete",
                    "group": "implementation-checklist"
                }
            ],
            "commandPalette": [
                {
                    "command": "implementation-checklist.createItem"
                },
                {
                    "command": "implementation-checklist.editItem",
                    "when": "implementation-checklist:hasItems"
                },
                {
                    "command": "implementation-checklist.deleteItem",
                    "when": "implementation-checklist:hasItems"
                },
                {
                    "command": "implementation-checklist.toggleComplete",
                    "when": "implementation-checklist:hasItems"
                },
                {
                    "command": "implementation-checklist.setPriority",
                    "when": "implementation-checklist:hasItems"
                },
                {
                    "command": "implementation-checklist.setDueDate",
                    "when": "implementation-checklist:hasItems"
                },
                {
                    "command": "implementation-checklist.quickAdd",
                    "when": "implementation-checklist:enabled"
                },
                {
                    "command": "implementation-checklist.quickFind",
                    "when": "implementation-checklist:enabled"
                },
                {
                    "command": "implementation-checklist.quickFilter",
                    "when": "implementation-checklist:enabled"
                },
                {
                    "command": "implementation-checklist.quickStats",
                    "when": "implementation-checklist:enabled"
                }
            ],
            "view/title": [
                {
                    "command": "implementation-checklist.quickAdd",
                    "when": "view == implementation-checklist",
                    "group": "navigation"
                },
                {
                    "command": "implementation-checklist.quickFind",
                    "when": "view == implementation-checklist",
                    "group": "navigation"
                },
                {
                    "command": "implementation-checklist.quickFilter",
                    "when": "view == implementation-checklist",
                    "group": "navigation"
                },
                {
                    "command": "implementation-checklist.quickStats",
                    "when": "view == implementation-checklist",
                    "group": "navigation"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.60.0",
        "@types/glob": "^7.1.3",
        "@types/mocha": "^8.2.2",
        "@types/node": "14.x",
        "eslint": "^7.27.0",
        "@typescript-eslint/eslint-plugin": "^4.26.0",
        "@typescript-eslint/parser": "^4.26.0",
        "glob": "^7.1.7",
        "mocha": "^8.4.0",
        "typescript": "^4.3.2",
        "vscode-test": "^1.5.2"
    },
    "dependencies": {
        "date-fns": "^2.30.0",
        "csv-parse": "^5.5.0",
        "csv-stringify": "^6.4.0",
        "marked": "^9.1.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/pasperfection/vscode-checklist"
    },
    "bugs": {
        "url": "https://github.com/pasperfection/vscode-checklist/issues"
    },
    "license": "MIT"
}
